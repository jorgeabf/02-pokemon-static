---
interface Props {
  title: string
}
const { title } = Astro.props
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <h1 class='text-4xl font-black text-center'>{title}</h1>
    </main>
    <slot />
  </body>
</html>
