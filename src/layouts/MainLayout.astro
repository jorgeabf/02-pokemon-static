---
interface Props {
  title: string
}
const { title } = Astro.props
---

<html lang='es'>
  <head>
    <meta charset='utf-8' />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <title>{title}</title>
  </head>
  <body class='bg-slate-800 text-slate-100'>
    <main class='max-w-4xl mx-auto px-6 py-12'>
      <h1 class='text-4xl font-black text-center mb-10 capitalize'>{title}</h1>
      <slot />
    </main>
  </body>
</html>
