---
import { ViewTransitions } from 'astro:transitions'
import { SITE_INFO } from 'src/consts/site-info'

interface Props {
  title?: string
  description?: string
  image?: string
}

const { SITE_TITLE, SITE_DESCRIPTION, SITE_IMAGE } = SITE_INFO

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  image = SITE_IMAGE
} = Astro.props
---

<html lang='es'>
  <head>
    <meta charset='utf-8' />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <meta
      name='theme-color'
      content='#1e293b'
    />
    <title>{title}</title>
    <meta
      name='description'
      content={description}
    />
    <meta
      property='og:type'
      content='website'
    />
    <meta
      property='og:url'
      content={import.meta.url}
    />
    <meta
      property='og:title'
      content={title}
    />
    <meta
      property='og:description'
      content={description}
    />
    <meta
      property='og:image'
      content={image}
    />
    <ViewTransitions />
  </head>

  <body class='bg-slate-800 text-slate-100'>
    <main class='max-w-6xl mx-auto px-6 py-12'>
      <h1
        class='text-2xl md:text-3xl lg:text-4xl font-black text-center mb-8 capitalize'
      >
        {title}
      </h1>
      <slot />
    </main>
  </body>
</html>
